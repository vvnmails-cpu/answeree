- name: Update archive index
  run: |
    echo "Updating archive_index.json..."
    FILES=$(ls data/*.json | grep -oE '[0-9]{4}-[0-9]{2}-[0-9]{2}' | sort -r)
    echo "[" > data/archive_index.json
    FIRST=true
    for DATE in $FILES; do
      if [ "$FIRST" = true ]; then
        FIRST=false
      else
        echo "," >> data/archive_index.json
      fi
      echo "\"$DATE\"" >> data/archive_index.json
    done
    echo "]" >> data/archive_index.json
